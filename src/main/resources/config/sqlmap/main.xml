<select id = "selectComBoardRegDate" resultMap = "comMap">
select * from mn_com
		 order by com_no desc
		 limit 0, 5
</select>

<select id = "selectDiaryBoardRegDate" resultMap = "boardMap">
select * from mn_diary
		 where dr_share = '1'
		 order by dr_no desc
		 limit 0, 3
