<update id="authApprove" parameterType="int">
	update mn_member
	   set auth_state = 'y'
     where no = #{no}	   
</update>

<select id="selectCareerById" parameterType="string" resultMap="careerMap">
	select *
	  from mn_member_career
	 where id = #{id}
</select>

</mapper>